- hosts: risno
  sudo: yes
  tasks:
  - name: depose docker repo key
    copy: src=docker-repo-key.asc dest=/root/docker-repo-key.asc
  - name: add docker repo key
    apt_key: file=/root/docker-repo-key.asc state=present
  - name: add ansible dependency
    apt: pkg={{item}}
    with_items:
    - python-apt
    - python-pycurl
  - name: add docker repo
    apt_repository: repo='deb http://get.docker.io/ubuntu docker main'

  - name: install docker
    apt: pkg=lxc-docker

  - name: install git
    apt: pkg=git
  - name: ensure risno git repo present
    git: repo=https://github.com/pgrange/risno.git dest=/opt/risno update=no

  - name: install risno configuration files
    copy: src={{item}} dest=/etc/opt/{{item}}
    with_items:
    - risno
    - risno.json

  - name: depose node repo key
    copy: src=node-repo-key.asc dest=/root/node-repo-key.asc
  - name: add node repo key
    apt_key: file=/root/node-repo-key.asc state=present
  - name: add node repo
    apt_repository: repo='deb http://ppa.launchpad.net/chris-lea/node.js/ubuntu oneiric main'

  - name: install nodejs
    apt: pkg=nodejs

  - name: install pip
    apt: pkg=python-pip
  - name: install python dependencies with pip
    pip: name={{item.pkg}} version={{item.version}}
    with_items:
    - {pkg: argparse, version: 1.2.1}
    - {pkg: beautifulsoup4, version: 4.3.2}
    - {pkg: colorama, version: 0.2.7}
    - {pkg: pyes, version: 0.90.1}
    - {pkg: six, version: 1.5.2}
    - {pkg: urllib3, version: 1.7.1}
    - {pkg: wsgiref, version: 0.1.2}
    
  - name: create risno user to run crons
    user: name=risno
          shell=/bin/false createhome=no
  - name: crontab to fetch new pubs
    cron: name="fetch pubs" cron_file=risno user=risno
          hour=15 minute=1
          job="python /opt/risno/fetch_pubs.py --logic-immo --se-loger --paru-vendu --avendre-alouer --pages-jaunes --immo-street --belle-immobilier --region aquitaine"
  - name: crontab to update locations
    cron: name="update locations" cron_file=risno user=risno
          hour=17 minute=10
          job="python /opt/risno/update_locations.py" 
  - name: crontab to update types
    cron: name="update types" cron_file=risno user=risno
          hour=17 minute=1
          job="python /opt/risno/update_type.py" 
