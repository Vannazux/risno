- var action = "/"
case active
 when "new"
  - action = "/"
 when "like"
  - action = "/like"
 when "dislike"
  - action = "/dislike"

html
 include head
 body
  include navbar
  include jumbo
  .container.pubs(class=active)
   each pub in pubs
    a(href=pub.url)
     .row.pub(id=pub.id, class=pub.opinion)
      .col-md-6.desc
       div= format_city_from_id(pub.cities)
       span= pub.location
       span= ' ' + pub.description
      .col-md-1.desc
       div
        span.glyphicon(class=tr_type(pub.types).icon)
        = ' ' + tr_type(pub.types).text
       div.price!= pub.price+'&nbsp;&euro;'
      .col-md-3.desc
       img.pub(src=pub.img)
      .col-md-2.vote
       button.btn.btn-success.btn-vote Bien
       button.btn.btn-danger.btn-vote Bof
  include foot
