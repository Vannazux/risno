!!! 5

- var action = "/"
case active
 when "new"
  - action = "/"
 when "like"
  - action = "/like"
 when "dislike"
  - action = "/dislike"

include head
include navbar
div
 form(action=action, method="get")
  input.form-control(type="text", name="max_price", placeholder="prix max")
  button.btn.btn-default(type="submit") filtrer
table.table.table-hover
 tbody
  each pub in pubs
   tr.pub(id=pub.id, class=pub.opinion)
    td
     div
      a(href=pub.url)= pub.location
     div= pub.description
    td= pub.price
    td
     a(href=pub.url)
      img.pub(src=pub.img)
    td
     button.btn.btn-success Bien
     button.btn.btn-danger Bof
include foot
